@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">新增類別</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">名稱</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">顯示順序</label>
            <input asp-for="DisplayOrder" class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">新增</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            返回列表
        </a>
    </div>
</form>

