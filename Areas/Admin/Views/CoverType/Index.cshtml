@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary"> 類別清單</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; 新增類別
            </a>
        </div>
    </div>
    <br>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    @*類別名稱*@
                    Category Name
                </th>

                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>

                    <td>
                        <div class="w-100 btn-group role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-3"><i class="bi bi-pencil-fill">編輯</i></a>
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-3"><i class="bi bi-trash3-fill">刪除</i></a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>

    </table>
</div>









